<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.okcu.imagefx.ImageFXController">
    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button fx:id="btnLoad" onAction="#onLoadButtonClick" text="Load Image" />
         <ComboBox fx:id="filterComboBox" onAction="#onComboBoxSelection" prefHeight="25.0" prefWidth="110.0" promptText="Select Filters" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <HBox alignment="CENTER" spacing="10">
                <ImageView fx:id="imgPicture" fitHeight="250.0" fitWidth="200.0" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, gray, 10, 0.5, 0, 0);" />
                <ImageView fx:id="imgNewPicture" fitHeight="250.0" fitWidth="200.0" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, gray, 10, 0.5, 0, 0);" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
